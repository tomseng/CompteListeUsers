<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.engels.connexioninscriptionbdd.ProfilActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/edtNomAlter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtPwdAlter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/edtPwdAlter"
        android:layout_below="@+id/edtNomAlter"
        android:autoText="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:password="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtPrenom"
        android:layout_below="@+id/edtPwdAlter"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Prenom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mettre à jour les données"
        android:id="@+id/btnUpdateData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/phrase"
        android:layout_above="@+id/btnUpdateData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deconnexion"
        android:id="@+id/btnDisconnect"
        android:layout_below="@+id/btnUpdateData"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
